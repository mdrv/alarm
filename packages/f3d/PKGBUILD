# Maintainer (aarch64): mdrv
# Prebuilt aarch64 binary package (built locally)
pkgname=f3d
pkgver=3.4.1
pkgrel=1
pkgdesc="A fast and minimalist 3D viewer (prebuilt aarch64 binary, built with ospray support)"
arch=('aarch64')
url="https://github.com/f3d-app/f3d"
license=('BSD-3-Clause')
depends=(
  ospray
  openvdb
  vtk
  alembic
  assimp
  draco
  gcc-libs
  glibc
  hicolor-icon-theme
  libxcursor
  netcdf
  onetbb
  opencascade
  openexr
  openmp
  python
)
provides=('f3d')
conflicts=('f3d')

# Prebuilt package - use source as the package itself
source=("${pkgname}-${pkgver}-${pkgrel}-aarch64.pkg.tar.xz")
sha256sums=('SKIP')

package() {
  # Prebuilt package - just copy it as-is
  install -Dm644 "${srcdir}/${pkgname}-${pkgver}-${pkgrel}-aarch64.pkg.tar.xz" "${pkgdir}/"
  install -Dm644 "${srcdir}/${pkgname}-${pkgver}-${pkgrel}-aarch64.pkg.tar.xz" "${pkgdir}/${pkgname}-${pkgver}-${pkgrel}-aarch64.pkg.tar.zst"
}
