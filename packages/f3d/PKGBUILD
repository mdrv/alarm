# Maintainer (aarch64): mdrv
# Prebuilt aarch64 binary package from local build
pkgname=f3d
pkgver=3.4.1
pkgrel=1
pkgdesc="A fast and minimalist 3D viewer (prebuilt aarch64 binary)"
arch=('aarch64')
url="https://github.com/f3d-app/f3d"
license=('BSD-3-Clause')
depends=(
  ospray
  openvdb
  vtk
  alembic
  assimp
  draco
  gcc-libs
  glibc
  hicolor-icon-theme
  libxcursor
  netcdf
  onetbb
  opencascade
  openexr
  openmp
  python
)
provides=('f3d')
conflicts=('f3d')

# No build needed - prebuilt package
source=("${pkgname}-${pkgver}-${pkgrel}-aarch64.pkg.tar.xz")
sha256sums=('SKIP')

package() {
  # Copy prebuilt package to destination
  cp "${srcdir}/${pkgname}-${pkgver}-${pkgrel}-aarch64.pkg.tar.xz" "${pkgdir}/"
}
