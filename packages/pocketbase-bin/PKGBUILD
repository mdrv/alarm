# Maintainer: mdrv
pkgname=pocketbase-bin
pkgver=0.36.3
pkgrel=1
pkgdesc='Open source backend for your next project in 1 file'
arch=('aarch64')
url='https://pocketbase.io'
license=('MIT')
provides=('pocketbase')
conflicts=('pocketbase')
depends=('glibc')
source=("https://github.com/pocketbase/pocketbase/releases/download/v${pkgver}/pocketbase_${pkgver}_linux_arm64.zip")
sha256sums=('SKIP')  # Placeholder - will be updated on first build
package() {
  install -Dm755 "$srcdir/pocketbase" "$pkgdir/usr/bin/pocketbase"
  install -Dm644 "$srcdir/LICENSE.md" -t "$pkgdir/usr/share/licenses/$pkgname"
}
